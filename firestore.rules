rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir acesso aos dados do usuário autenticado
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Permitir criação de novos usuários
      allow create: if request.auth != null;
    }
    
    // Permitir acesso às métricas para usuários autenticados
    match /metrics/{metricId} {
      allow read, write: if request.auth != null;
    }
    
    // Estratégias de anúncio - apenas para o usuário proprietário
    match /ad_strategies/{strategyId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Links de compartilhamento - apenas para o usuário proprietário
    match /share_links/{linkId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Benchmarks de IA - apenas para o usuário proprietário
    match /ai_benchmarks/{benchmarkId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Detalhes mensais - apenas para o usuário proprietário
    match /monthly_details/{detailId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Campanhas sincronizadas - apenas para o usuário proprietário
    match /campaigns/{campaignDocId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Seleções do usuário - apenas para o usuário proprietário
    match /user_selections/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Permitir acesso a outras coleções para usuários autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regra de fallback para desenvolvimento (remover em produção)
    match /{document=**} {
      allow read, write: if true;
    }
  }
} 